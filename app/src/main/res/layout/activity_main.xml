<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/FaceDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </SurfaceView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="5sp">

    <TextView
        android:id="@+id/RedNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red: 0">
    </TextView>

    <SeekBar
        android:id="@+id/RedVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255">
    </SeekBar>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp">

        <TextView
            android:id="@+id/BlueNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green: 0">
        </TextView>

        <SeekBar
            android:id="@+id/GreenVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255">
        </SeekBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp">

        <TextView
            android:id="@+id/GreenNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue: 0">
        </TextView>

        <SeekBar
            android:id="@+id/BlueVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255">
        </SeekBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hair Style:"
            android:layout_marginRight="5sp">
        </TextView>

        <Spinner
            android:id="@+id/HairStyles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/RadioGroupOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/hairRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hair"
            android:padding="5sp"/>

        <RadioButton
            android:id="@+id/eyesRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eyes"
            android:padding="5sp"/>

        <RadioButton
            android:id="@+id/skinRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin"
            android:padding="5sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/RandomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Face"
        android:layout_marginLeft="5sp">
    </Button>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
